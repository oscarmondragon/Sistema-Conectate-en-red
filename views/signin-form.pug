extends layout.pug
block content
	section.container
		h1.header= title
		if(message)
			div.error= message
		article.item
			form.form-group(method="post", action="/signin")
				.form-group.row
						label.col-sm-2.col-form-label(for='inputEmail3') Usuario
						.col-sm-10
							input#inputEmail3.form-control(type='text', name= "username", placeholder='Username', required)
				.form-group.row
						label.col-sm-2.col-form-label(for='inputPassword3') Contrase√±a
						.col-sm-10
							input#inputPassword3.form-control(type='password', name= "password", placeholder='Password', required)
				.form-group.row
						.offset-sm-2.col-sm-10
							button.btn.btn-primary(type='submit' value= "Registrarse") Registrarse
				.form-group.row
						.offset-sm-2.col-sm-10
							a.btn.btn-primary(href="/Login") Ir a login